run = "python main.py"
hidden = [".build", ".config"]
entrypoint = "main.py"

[nix]
channel = "stable-22_11"

[env]
PYTHONPATH = "${PYTHONPATH}:${REPL_HOME}"

[packager]
language = "python3"
ignoredPackages = ["unit_tests"]

[packager.features]
packageSearch = true
guessImports = true
enabledForHosting = false

[languages.python3]
pattern = "**/{*.py,*.pyw}"
syntax = "python"

[languages.python3.languageServer]
start = "pylsp" 